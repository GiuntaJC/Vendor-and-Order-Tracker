@using VendorAndOrderTracker.Models;

<h1>Vendors</h1>
@if (Model.Count == 0)
{
  <p>There are no vendors to list</p>
}
<ul>
  @foreach (Vendor vendor in Model)
  {
    <li><a href="/vendors/@vendor.Id">@vendor.VendorName</a></li>
  }

</ul>
<a href="/vendors/new">Add a new vendor</a><br><br>

<form action="/vendors/delete" method="post">
  <button type="submit">Remove all vendors (Cannot be undone!)</button>
</form><br><br>
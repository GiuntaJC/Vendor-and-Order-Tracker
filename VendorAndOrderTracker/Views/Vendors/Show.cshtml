@using VendorAndOrderTracker.Models;

<h1>@Model["vendor"].Name</h1>
<p>@Model["vendor"].Description</p><br>

<h2>Orders: </h2>
<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title --- @order.Date</a></li>  // href must be single quotes in this case? Seems to throw error if quote types are reversed
  }
</ol>

<a href='/vendors/@Model["vendor"].Id/orders/new'>New Order</a><br><br>
<a href="/vendors">Return to list</a><br>
<a href="/">Return to home screen</a>